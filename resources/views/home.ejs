            <button class="shop"> Shop March </button>

        </section>

        <!-- service section -->
        <section id="service">
            <p class="fstpara"> Ways to Support </p>
            <h3 class="fsthead">Support Acme Outdoors</h3>
            <div class="cards">
                <div class="card">
                    <p class="no"> 01 </p>
                    <h3 class="title">Shop Products</h3>
                    <div class="box">

                    </div>
                </div>

                <div class="card">
                    <p class="no"> 02 </p>
                    <h3 class="title">Donate Food</h3>
                    <div class="box">

                    </div>
                </div>

                <div class="card">
                    <p class="no"> 03 </p>
                    <h3 class="title">Buy Gift Cards</h3>
                    <div class="box">

                    </div>
                </div>
            </div>
        </section>

        <!-- client section -->
        <section class="client">
            <div class="client-box">
                <h3 class="head1">How we're Keeping you</h3>
                <h3 class="head2">safe during COVID-19</h3>
                <p class="para1">Lorem ipsum dolor sit amet consectetur hhsdhfgh.</p>
                <p class="para2">Lorem ipsum, dolor sit amet hsgdfhg hhjd.</p>
                <p class="para3">Lorem ipsum, dolor sit hjhtrwe hjg.</p>
                <button class="clientbtn">Read Our Statements</button>
            </div>
        </section>

        <section class="contactus">
            <p class="parac"> Contact Us </p>
            <div class="contact">
                <form action="/contact" method="POST" class="formcontact">
                    <label for="name">Name</label>
                    <input type="text" name="name" id="name" placeholder="Enter Your Name">
                    <br>
                    <label for="phno">Phone No</label>
                    <input type="text" name="phone" id="phone" placeholder="Enter Your phno">
                    <br>
                    <label for="email">Email</label>
                    <input type="text" name="email" id="email" placeholder="Enter Your email">
                    <br>
                    <label for="msg" class="lmsg">Message</label>
                    <br>
                    <textarea name="message" id="msg" cols="30" rows="6" placeholder="Enter Message"></textarea>
                    <br>
                    <button type="submit" class="btnsub"> Submit </button>
                </form>
            </div>
        </section>
        
        <footer class="footer">
            <div class="socmedia">
                <p><i class="far fa-user"></i>PortFolio</p>

                <div class="icon">
                    <i class="fab fa-facebook-square"></i>
                    <i class="fab fa-instagram"></i>
                    <i class="fab fa-google"></i>
                </div>
            </div>

            <div class="author">
                <p class="auth"><i class="fas fa-laptop-code"></i>  Made by Rohan</p>
            </div>
        </footer>
        <script>
            var open = document.querySelector('.menu');
            var close = document.querySelector('.closebtn');

            open.addEventListener("click", () => {
                document.getElementById("mysidenav").style.width = "11.5rem";
            });

            close.addEventListener("click", () => {
                document.getElementById("mysidenav").style.width = "0";
            });

        </script>
</body>

</html>