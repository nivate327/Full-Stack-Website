    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@200&display=swap" rel="stylesheet">
</head>

<body>
    <!-- Nav Bar -->
    <%- include("../partials/Navbar") -%>

        <!-- home section -->
        <section class="homesection">
            <h1>Serving You </h1>
